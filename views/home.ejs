<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo App</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <nav>
      <div class="navbar">
        <div class="nav-logo">
          <h1>Task Manager</h1>
        </div>
        <div class="nav-links">
          <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="/add-tasks" class="add-btn">Add tasks</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <main>
      <div class="main-section">
        <div class="main-1">
          <span class="main-head">Todo List</span>
          <i class="fa-solid fa-trash"></i>
        </div>
        <ul>
          <% for (let u of users) { %>
          <li>
            <!-- COMPLETE FORM -->
            <form
              action="/complete/<%= u.id %>"
              method="post"
              style="display: inline"
            >
              <input id="checkbox" type="checkbox" onchange="this.form.submit()"
              <%= u.is_completed ? 'checked' : '' %> >
            </form>

            <!-- TITLE -->
            <span class="<%= u.is_completed ? 'completed' : '' %>">
              <%= u.title %>
            </span>

            <!-- DELETE FORM -->
            <form
              action="/delete/<%= u.id %>"
              method="get"
              style="display: inline"
            >
              <button id="del-btn">Delete</button>
            </form>
          </li>
          <% } %>
        </ul>
      </div>
    </main>
    <script src="script.js"></script>
  </body>
</html>
