<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo App</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <nav>
      <div class="navbar">
        <div class="nav-logo">
          <h1>Task Manager</h1>
        </div>
        <div class="nav-links">
          <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="/add-tasks" class="add-btn">Add tasks</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <main>
      <div class="main-section">
        <div class="main-1">
          <span class="main-head">Todo List</span>
         <a href="/delete-all""> 
          <i class="fa-solid fa-trash"></i>
        </a>
        </div>
        <ul>
          <% for (let u of users) { %>
          <li class="todo-item">
  <div class="left">
    <form action="/complete/<%= u.id %>" method="post">
      <input type="checkbox" onchange="this.form.submit()" <%= u.is_completed ? 'checked' : '' %>>
    </form>
    <span class="<%= u.is_completed ? 'completed' : '' %>"><%= u.title %></span>
  </div>

  <form action="/delete/<%= u.id %>" method="get">
    <button id="del-btn">Delete</button>
  </form>
</li>

          <% } %>
        </ul>
      </div>
    </main>
    <script src="script.js"></script>
  </body>
</html>
